<h1>This is the testing category, hopefully it is not visible in production</h1>

<% @questions.each do |question| %>
  <div class="question" id="<%= question.short_name %>">
    <span><%= question.text %> - <%= question.id %></span>
    <%= form_with(model: question, local: true) do |form| %>
      <%= form.label :response %><br>
      <%= form.text_field :response %>
      <%= form.submit %>
    <% end %>
  </div>
<% end %>
